<Window x:Class="HDRGammaController.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HDRGammaController"
        xmlns:vm="clr-namespace:HDRGammaController.ViewModels"
        Title="HDR Gamma Controller - Dashboard" 
        Height="Auto" Width="1000"
        SizeToContent="Height"
        MaxHeight="900" 
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Reusing styles from SettingsWindow for consistency -->
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="CardBorder" Color="#3F3F3F"/>
        <SolidColorBrush x:Key="TextDim" Color="#888888"/>
        
        <Style x:Key="MonitorCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="240"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Style (Copied for consistency) -->
        <Style x:Key="ModernToggle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Input Style -->
        <Style TargetType="TextBox">
             <Setter Property="Background" Value="#3D3D3D"/>
             <Setter Property="Foreground" Value="White"/>
             <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="Padding" Value="8,6"/>
             <Setter Property="CaretBrush" Value="White"/>
        </Style>
        
        <Style TargetType="ComboBox">
             <Setter Property="Background" Value="#3D3D3D"/>
             <Setter Property="Foreground" Value="White"/>
             <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="Padding" Value="6"/>
             <Setter Property="Margin" Value="0,0,8,0"/>
             <Setter Property="ItemContainerStyle">
                 <Setter.Value>
                     <Style TargetType="ComboBoxItem">
                         <Setter Property="Background" Value="#3D3D3D"/>
                         <Setter Property="Foreground" Value="White"/>
                         <Setter Property="BorderThickness" Value="0"/>
                         <Setter Property="Template">
                             <Setter.Value>
                                 <ControlTemplate TargetType="ComboBoxItem">
                                     <Border Name="Border" Padding="4" Background="{TemplateBinding Background}">
                                         <ContentPresenter />
                                     </Border>
                                     <ControlTemplate.Triggers>
                                         <Trigger Property="IsMouseOver" Value="True">
                                             <Setter TargetName="Border" Property="Background" Value="#555"/>
                                         </Trigger>
                                         <Trigger Property="IsSelected" Value="True">
                                              <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                         </Trigger>
                                     </ControlTemplate.Triggers>
                                 </ControlTemplate>
                             </Setter.Value>
                         </Setter>
                     </Style>
                 </Setter.Value>
             </Setter>
        </Style>

        <!-- ScrollBar Styling -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle"
                                Background="#555555"
                                CornerRadius="4"
                                BorderThickness="0" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" Background="Transparent" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DATA TEMPLATES -->
        
        <!-- Monitor Template -->
        <DataTemplate DataType="{x:Type vm:DashboardItem}">
            <Border Style="{StaticResource MonitorCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding FriendlyName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                        <Border Grid.Column="1" Background="{Binding BadgeColor}" CornerRadius="4" Padding="6,2">
                            <TextBlock Text="{Binding BadgeText}" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                    
                    <!-- Stats -->
                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Gamma Mode:" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock Text="{Binding CurrentGamma}" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Brightness:" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <ProgressBar Value="{Binding CurrentBrightness}" Height="4" Margin="0,2,0,4" Background="#444" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="{Binding CurrentBrightness, StringFormat={}{0}%}" FontSize="12" Margin="0,0,0,8"/>

                        <TextBlock Text="Color Temp:" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock Text="{Binding CurrentTemperatureText}" FontSize="12"/>
                    </StackPanel>
                    
                    <!-- Actions -->
                    <Button Grid.Row="2" Content="Configure Settings" Click="Configure_Click" Tag="{Binding}"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- App Exclusion Template -->
        <DataTemplate DataType="{x:Type vm:AppExclusionItem}">
            <Border Style="{StaticResource MonitorCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Night Mode App Auto-Disable" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Disable Night Mode for:" Foreground="{StaticResource TextDim}" FontSize="12" Margin="0,0,0,8"/>

                        <!-- Add New (ComboBox) -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox x:Name="AppSelector" IsEditable="True" ItemsSource="{Binding RunningApps}" Text="Select running app..." 
                                      Foreground="White" AllowDrop="False" BorderBrush="{StaticResource CardBorder}">
                                <ComboBox.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="#3D3D3D"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="CaretBrush" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                                      
                            <Button Grid.Column="1" Content="Add" Click="AddExcludedApp_Click" CommandParameter="{Binding ElementName=AppSelector}"/>
                        </Grid>

                        <!-- List -->
                        <ListBox Grid.Row="2" ItemsSource="{Binding ExcludedApps}" Background="#333" BorderThickness="0" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4" Background="Transparent">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding AppName}" VerticalAlignment="Center" Margin="8,0" FontSize="12" Foreground="White" FontWeight="Medium"/>
                                        
                                        <!-- Full/Global Checkbox -->
                                        <CheckBox Grid.Column="1" Content="Block All Screens" IsChecked="{Binding FullDisable}" 
                                                  VerticalAlignment="Center" Margin="0,0,12,0" Foreground="#AAA" FontSize="11"
                                                  Click="ExcludedAppMode_Click"/>

                                        <Button Grid.Column="2" Content="âœ•" Width="24" Height="24" 
                                                Padding="0" Background="#333" Foreground="#FFF" BorderThickness="0"
                                                Cursor="Hand" Click="RemoveExcludedApp_Click" Tag="{Binding AppName}">
                                                 <Button.Resources>
                                                     <Style TargetType="Border">
                                                         <Setter Property="CornerRadius" Value="12"/>
                                                     </Style>
                                                 </Button.Resources>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#1E1E1E" BorderBrush="#3F3F3F" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Margin="16,0">
                    <TextBlock Text="Monitor Dashboard" VerticalAlignment="Center" FontWeight="Medium"/>
                    <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" Foreground="#888" BorderThickness="0"
                            Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="Auto"/>
                         <ColumnDefinition Width="*"/>
                         <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Active Monitors" FontSize="18" FontWeight="SemiBold"/>
                        <Button Content="Refresh" Margin="16,0,0,0" Click="Refresh_Click" Padding="8,4" Background="#444"/>
                    </StackPanel>
                    
                    <ToggleButton x:Name="NightModeToggle" Grid.Column="2" Content="ðŸŒ™ Night Mode" 
                                  Width="320" Height="36" Padding="20,0" HorizontalAlignment="Right"
                                  IsChecked="{Binding IsNightModeEnabled, Mode=OneWay}"
                                  Click="NightModeToggle_Click" MouseRightButtonUp="NightModeToggle_RightClick">
                         <ToggleButton.Style>
                             <Style TargetType="ToggleButton">
                                 <Setter Property="Template">
                                     <Setter.Value>
                                         <ControlTemplate TargetType="ToggleButton">
                                             <Border x:Name="border" Background="#444" CornerRadius="4">
                                                 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                             </Border>
                                             <ControlTemplate.Triggers>
                                                 <Trigger Property="IsChecked" Value="True">
                                                     <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                                     <Setter Property="Foreground" Value="White"/>
                                                 </Trigger>
                                             </ControlTemplate.Triggers>
                                         </ControlTemplate>
                                     </Setter.Value>
                                 </Setter>
                                 <Setter Property="Foreground" Value="White"/>
                             </Style>
                         </ToggleButton.Style>
                         <ToggleButton.ContextMenu>
                             <ContextMenu>
                                 <MenuItem Header="Pause for 1 Hour" Click="Pause1h_Click"/>
                                 <MenuItem Header="Pause for 4 Hours" Click="Pause4h_Click"/>
                                 <MenuItem Header="Pause Until Morning" Click="PauseUntilMorning_Click"/>
                             </ContextMenu>
                         </ToggleButton.ContextMenu>
                    </ToggleButton>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl x:Name="MonitorList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <!-- ItemTemplate is handled by DataTemplates in Resources -->
                        </ItemsControl>

                        <!-- Night Mode Schedule -->
                        <Expander Header="Night Mode Schedule &amp; Settings" Foreground="White" Margin="0,24,0,0" IsExpanded="True">
                            <StackPanel Margin="12">
                                <TextBlock Text="Configure automatic night mode schedule." Foreground="#888" Margin="0,0,0,12"/>
                                <local:NightModeScheduleControl x:Name="ScheduleEditor"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>

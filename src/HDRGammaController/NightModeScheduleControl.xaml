<UserControl x:Class="HDRGammaController.NightModeScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="480">
    <UserControl.Resources>
        <!-- Re-use styles from SettingsWindow if possible, or define local ones -->
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="CardBorder" Color="#3F3F3F"/>
        <SolidColorBrush x:Key="TextDim" Color="#888888"/>
        
        <Style TargetType="Button" x:Key="SmallBtn">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title/Summary -->
            <RowDefinition Height="180"/>  <!-- Graph -->
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="Auto"/>    <!-- List -->
        </Grid.RowDefinitions>

        <!-- Summary and Location -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Background="Transparent" Foreground="#AAA" FontSize="11" TextWrapping="Wrap" VerticalAlignment="Center">
                Drag points to adjust. Double-click to add.
            </TextBlock>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                 <Button x:Name="DetectBtn" Content="Auto-Detect Location" Click="Detect_Click" 
                         FontSize="11" FontWeight="SemiBold" Padding="8,4" Margin="0,0,8,0"
                         Style="{StaticResource SmallBtn}" Background="#0064B0"/>
                 
                 <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                     <TextBlock Text="Lat:" Foreground="#666" FontSize="11" VerticalAlignment="Center" Margin="0,0,4,0"/>
                     <TextBox x:Name="LatBox" Width="50" Background="#333" Foreground="#DDD" BorderThickness="0" Padding="4,2" FontSize="11" LostFocus="Location_LostFocus"/>
                     <TextBlock Text="Lon:" Foreground="#666" FontSize="11" VerticalAlignment="Center" Margin="8,0,4,0"/>
                     <TextBox x:Name="LonBox" Width="50" Background="#333" Foreground="#DDD" BorderThickness="0" Padding="4,2" FontSize="11" LostFocus="Location_LostFocus"/>
                 </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Graph Container -->
        <Border Grid.Row="1" Background="#222" BorderBrush="#444" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
            <Grid>
                 <Canvas x:Name="GridCanvas" IsHitTestVisible="False"/>
                 <Canvas x:Name="CurveCanvas" ClipToBounds="True" Background="Transparent" 
                        MouseLeftButtonDown="GraphCanvas_MouseDown"
                        MouseMove="GraphCanvas_MouseMove"
                        MouseLeftButtonUp="GraphCanvas_MouseUp"
                        SizeChanged="GraphCanvas_SizeChanged"/>
                        
                 <!-- Drag Readout Popup (In-Canvas Overlay) -->
                 <Border x:Name="DragOverlay" HorizontalAlignment="Left" VerticalAlignment="Top" 
                         Background="#202020" BorderBrush="White" BorderThickness="1" CornerRadius="4" 
                         Padding="8" IsHitTestVisible="False" Visibility="Collapsed">
                     <StackPanel>
                         <TextBlock x:Name="OverlayTime" Text="22:00" Foreground="White" FontWeight="Bold"/>
                         <TextBlock x:Name="OverlayTemp" Text="3500K" Foreground="#FFB400"/>
                     </StackPanel>
                 </Border>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="+ Add Point" Click="AddPoint_Click" Style="{StaticResource SmallBtn}" Margin="0,0,8,0"/>
            <Button Content="Reset Default" Click="Reset_Click" Style="{StaticResource SmallBtn}"/>
        </StackPanel>

        <!-- List -->
        <!-- Use standard ScrollViewer in parent, allow Grid to auto-size -->
        <DataGrid x:Name="PointsGrid" Grid.Row="3" Background="#252525" BorderThickness="0" 
                  AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#444"
                  RowBackground="Transparent" Foreground="White"
                  VerticalScrollBarVisibility="Disabled">
            <DataGrid.Resources>
                <!-- Resources omitted for brevity, keeping existing styles -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#333"/>
                    <Setter Property="Foreground" Value="#BBB"/>
                    <Setter Property="Padding" Value="6"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                             <!-- Use a subtler selection color or keep existing -->
                            <Setter Property="Background" Value="#0078D4"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <!-- Trigger Type -->
                <DataGridTemplateColumn Header="Type" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TriggerType}" Foreground="#DDD"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox SelectedItem="{Binding TriggerType}" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=TriggerTypes}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Time / Offset -->
                <DataGridTemplateColumn Header="Time/Offset" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayTime}" Foreground="#DDD"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding DisplayTime, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                
                <!-- Temp -->
                <DataGridTemplateColumn Header="Temp (K)" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TargetKelvin}" FontWeight="Bold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                             <TextBox Text="{Binding TargetKelvin, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Fade -->
                <DataGridTemplateColumn Header="Fade (m)" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FadeMinutes}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding FadeMinutes, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                
                <!-- Delete -->
                <DataGridTemplateColumn Width="*"> <!-- Expand to fill -->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteRow_Click" 
                                    Background="#333" Foreground="#FF5555" BorderThickness="0" 
                                    FontSize="11" Padding="8,2" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

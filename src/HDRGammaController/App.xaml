<Application x:Class="HDRGammaController.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown"
             DispatcherUnhandledException="App_DispatcherUnhandledException">
    <Application.Resources>
        <!-- Light Theme Colors -->
        <SolidColorBrush x:Key="LightMenuBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="LightMenuForeground" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="LightMenuBorder" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="LightMenuHighlight" Color="#E0E0E0"/>
        
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="DarkMenuBackground" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="DarkMenuForeground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkMenuBorder" Color="#3F3F3F"/>
        <SolidColorBrush x:Key="DarkMenuHighlight" Color="#3E3E3E"/>
        
        <!-- Dynamic brushes that will be set at runtime -->
        <SolidColorBrush x:Key="MenuBackground" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="MenuForeground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MenuBorder" Color="#3F3F3F"/>
        <SolidColorBrush x:Key="MenuHighlight" Color="#3E3E3E"/>
    </Application.Resources>
</Application>
